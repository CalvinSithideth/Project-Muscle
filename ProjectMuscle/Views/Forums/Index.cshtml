@model IEnumerable<ProjectMuscle.Models.Forums.Forum>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ForumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForumDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ForumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForumDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ForumID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ForumID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ForumID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
